@model Opinia

<form asp-action="Index" class="col-8" method="post" role="form">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <label asp-for="NazwaUzytkownika" class="col-md-3" style="color: white"></label>
        <div class="col-md-9">
            <input asp-for="NazwaUzytkownika" class="form-control" />
            <span asp-validation-for="NazwaUzytkownika" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Email" class="col-md-3" style="color: white"></label>
        <div class="col">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Wiadomosc" class="col-md-3" style="color: white"></label>
        <div class="col-md-7">
            <textarea asp-for="Wiadomosc" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Wiadomosc" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="OczekujeOdpowiedzi" class="col-md-3" style="color: white"></label>
        <div class="col-md-1">
            <input type="checkbox" asp-for="OczekujeOdpowiedzi" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-5">
            <input type="submit" class="btn btn-primary" value="Wyślij opinię" />
        </div>
    </div>

</form>