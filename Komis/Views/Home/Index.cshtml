@model HomeVM

<div class="row" style="color: white">
    <h2>@Model.Title</h2>
</div>

<div class="row">
    @foreach (var samochod in Model.Samochody)
    {
        <div class="col-sm-4 col-lg-4 col-md-4" style="margin-bottom: 5px">
            <div class="img-thumbnail">
                <img class="image" src="@samochod.MiniaturkaUrl" alt="" />
                <div class="figure-caption">
                    <h3>@samochod.Cena.ToString("c")</h3>
                    <h3>
                        <a asp-controller="Home" asp-action="Szczegoly" asp-route-id="@samochod.Id">@samochod.Marka</a> - @samochod.Model - @samochod.RokProdukcji
                    </h3>
                    <h4>
                        Przebieg : @samochod.Przebieg
                    </h4>
                    <h4>
                        Pojemność : @samochod.Pojemnosc
                    </h4>
                    <h4>
                        Moc: @samochod.Moc
                    </h4>
                    <p>@samochod.Opis</p>
                </div>
            </div>
        </div>

    }


</div>
